<tal:button i18n:domain="silva">
  <a accesskey="#"
     tal:condition="viewlet/available"
     tal:attributes="title viewlet/help;
                     href string:${context/@@absolute_url}/edit/${viewlet/tab};
                     class python:viewlet.selected and 'selected';
                     accesskey viewlet/accesskey;">
    <span tal:replace="viewlet/label" /><tal:selected tal:condition="not:viewlet/selected">...</tal:selected>
  </a>
</tal:button>
