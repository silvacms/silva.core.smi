<div class="add-new-content-listing"
     tal:define="here_url context/@@absolute_url"
     i18n:domain="silva">
  <h2 class="top">
    <img src="#" alt="#"
         tal:attributes="src string:${layout/root_url}/${view/icon};
                         alt context/meta_type" />
    &#xab;<span tal:replace="context/get_title_or_id"/>&#xbb;
  </h2>
  <h3 class="top-controls" i18n:translate="">
    create an object
  </h3>
  <p class="readable" i18n:translate="">
    Click a name to create an item. Note that this screen only lists descriptions of objects that are available at this location. For additional information about an item see the
    <a class="underline"
       href="http://www.infrae.com/products/silva/docs"
       i18n:name="silva_documentation"
       i18n:translate="">Silva documentation</a>.
  </p>
  <br />

  <dl class="new-content-listing">
    <tal:content tal:repeat="addable view/addables">
      <dt>
        <img src="#" alt="#"
             tal:attributes="src string:${layout/root_url}/${addable/icon};
                             alt addable/name" />
        <a class="published"
           tal:attributes="href addable/url;
                           title addable/title"
           tal:content="addable/name">
          Content type.
        </a>
      </dt>
      <dd>
        <p class="readable"
           tal:content="structure addable/description">
          Content description
        </p>
      </dd>
    </tal:content>
  </dl>

</div>
