<tal:provider>
  <tal:if condition="provider/messages">
    <div class="feedback"
	 tal:attributes="class python: provider.message_class(provider.messages()[0][0])">
      <tal:repeat repeat="message provider/messages">
	<span tal:content="structure python:message[1]"
	      tal:attributes="class python:provider.message_class(message[0])">
	  message
	</span>
      </tal:repeat>
    </div>
  </tal:if>
  <tal:if condition="python: not provider.messages()">
    <div class="fixed-clear">&nbsp;</div>
  </tal:if>
