<div id="feedback" tal:condition="not provider.no_empty_feedback">
  <tal:messages condition="provider.messages">
    <div class="feedback"
         tal:repeat="message provider.messages"
         tal:attributes="class message.css_class">
      <span tal:content="structure message.text"></span>
    </div>
  </tal:messages>
  <tal:empty condition="not: provider.messages">
    <div class="fixed-clear">&nbsp;</div>
  </tal:empty>
</div>
