<form action="." tal:attributes="action request/URL" method="post"
      enctype="multipart/form-data"
      tal:define="here_url context/@@absolute_url"
      i18n:domain="silva">
  <div class="explanation">
    <h1 tal:content="view/label">label</h1>
    <p class="disclaimer" i18n:translate="">
      If you wish you can break the references to
      <a href="#"
        i18n:name="content_link"
        tal:attributes="href here_url"
        tal:content="context/get_title_or_id">
        Content</a>.
    </p>
    <p class="disclaimer" i18n:translate="">
      Please confirm that you would like to break these references. If you do so
      you'll alter the following content:
    </p>
    <ul>
      <tal:repeat repeat="ref view/references">
        <li tal:define="source ref/source">
          <a tal:attributes="href string:${source/@@absolute_url}"
            tal:content="source/get_title">
            link to public view
          </a>
          (<span i18n:translate="">edit:</span>
           <a tal:content="python: '/'.join(source.getPhysicalPath())"
             tal:attributes="href string:${source/@@absolute_url}/edit">
             path to edit screen
           </a>)
        </li>
      </tal:repeat>
    </ul>
    <p class="disclaimer" i18n:translate="">
      You cannot undo this operation, and you can damage (potentially
      published) content.
    </p>
  </div>

  <div class="controls">
    <input tal:repeat="widget view/fieldWidgets"
           tal:replace="structure widget/render" />
    <input tal:repeat="widget view/actionWidgets"
           tal:replace="structure widget/render" />
  </div>
</form>
